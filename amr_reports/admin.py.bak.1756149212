from django.contrib import admin
from .models import LabResult

@admin.register(LabResult)
class LabResultAdmin(admin.ModelAdmin):
    list_display = ['id', 'organism', 'antibiotic', 'ast_result', 'test_date']
    search_fields = ('patient_id', 'organism_isolated', 'antibiotic_tested')
    list_filter = ['ast_result', 'organism', 'test_date']
